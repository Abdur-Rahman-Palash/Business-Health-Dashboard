{
  "name": "executive-dashboard",
  "services": {
    "executive-dashboard": {
      "source": {
        "project": "."
      },
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements-streamlit.txt && streamlit run backend/streamlit_app.py --server.port=$PORT --server.address=0.0.0.0"
      },
      "deploy": {
        "startCommand": "streamlit run backend/streamlit_app.py --server.port=$PORT --server.address=0.0.0.0",
        "healthcheckPath": "/_stcore/health",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE"
      }
    }
  }
}
