{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "out"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "src": "/(.*)",
      "dest": "/out/$1"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 10,
      "memory": 512
    }
  },
  "env": {
    "PYTHON_VERSION": "3.12"
  }
}
